<div class="post card">
  <form class="form" id="edit-post-form">
    <div>
      <label for="post-title">Title</label>
      <input class="form-input" type="text" id="post-title" name="post-title" value="{{post.title}}">
      <label for="post-body">Content</label>
      <textarea class="form-input" type="text" id="post-body" name="post-body">{{post.body}}</textarea>
      <button type="submit" class="btn">Update Post</button>
    </div>
  </form>
</div>

<script src="/js/edit.js"></script>